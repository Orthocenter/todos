<section id="todoapp">
    <header id="header">
        <h2>todos</h2>
    </header>

    <section id="main">
        <div id="main-header">
            <!--<input id="new-todo" type="text" placeholder="What needs to be done?" value=""/>-->
            {{input id="new-todo"
            type="text"
            value=newTitle
            placeholder="What needs to be done"
            action="createTodo"}}
            <!--WHY THIS NOT WORK??? on="focusOut"-->
        </div>
        <ul id="todo-list">
          {{outlet}}
        </ul>
    </section>

    <section id="footer">
        <span id="todo-count">
            <strong>{{remaining}}</strong>
            {{inflection}}
        </span>
        <ul id="filter">
            <!--<li class="active">All</li>-->
            <li>{{#link-to 'todos.index'}}All{{/link-to}}</li>
            <!--<li>Active</li>-->
            <li>{{#link-to 'todos.active'}}Active{{/link-to}}</li>
            <!--<li>Completed</li>-->
            <li>{{#link-to 'todos.completed'}}Completed{{/link-to}}</li>
        </ul>
    </section>
</section>